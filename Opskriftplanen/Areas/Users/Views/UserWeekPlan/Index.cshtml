@model Opskriftplanen.Models.ViewModels.WeekIndexViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Uge plan Liste</h2>
        </div>        
    </div>
    <br />
    <div>
        @if (Model.EnumWeekPlan.Count() > 0)
        {
            
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.WeekPlan)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.WeekDetails.Name)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model.EnumWeekPlan)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Week)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.WeekDetails.Name)
                        </td>
                        
                        <td>
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
                
            }
        else
        {
            <p>Der er ingen Ugeplaner</p>
        }
    </div>
</div>

