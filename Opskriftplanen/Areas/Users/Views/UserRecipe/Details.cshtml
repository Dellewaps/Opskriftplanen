@model Opskriftplanen.Models.ViewModels.RecipeViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Opskrift Detaljer</h2>
<br />
<div class="bordoer backgroundWhite row">
    <div class="col-8">
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Recipes.Name" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Recipes.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Recipes.Description" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    @Html.TextAreaFor(m => m.Recipes.Description)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Recipes.PersonCount" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Recipes.PersonCount" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Recipes.CategoryId" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Recipes.Category.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">

                </div>
                <div class="col-5">
                    <table id="formTable">
                        <thead>
                            <tr>
                                <th><label class="col-form-label">Ingrediens</label></th>
                                <th><label class="col-form-label">Vægt</label></th>
                                <th><label class="col-form-label">Måle Enhed</label></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ingredientCollections)
                            {
                                <tr>
                                    <td><select asp-for="@item.Ingredient.Name" id="IngredientId" class="form-control" style="width: 200px;"></select></td>
                                    <td><input asp-for="@item.Measur" style="width: 80px;" /></td>
                                    <td><select asp-for="@item.MeasurmentUnit.Name" class="form-control" style="width: 100px;"></select></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="col-1"></div>
    <div class="col-3">
        <img src="@Model.Recipes.Image" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9;" />
    </div>
    <div class="col-8">
        <div class="col-8 offset-4">
            <partial name="_DetailsAndBackToListButton" model="Model.Recipes.Id" />
        </div>
    </div>


</div>

