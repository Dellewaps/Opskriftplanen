@model Opskriftplanen.Models.ViewModels.RecipeViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Slet Film</h2>
<br />

<form method="post">
    <div class="bordoer backgroundWhite row">
        <div class="col-8">
            <input type="hidden" asp-for="Recipes.Id" />
            <fieldset disabled>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Recipes.Name" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Recipes.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Recipes.Description" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        @Html.TextAreaFor(m => m.Recipes.Description)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Recipes.PersonCount" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Recipes.PersonCount" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Recipes.Image" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" multiple class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Recipes.CategoryId" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.Recipes.CategoryId" id="CategoryId" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    
                </div>
            </fieldset>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="@Model.Recipes.Image" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9;" />
        </div>
        <div class="col-8">
            <div class="col-8 offset-4">
                <partial name="_DeleteAndBackToListButton" model="Model.Recipes.Id" />
            </div>
        </div>


    </div>
</form>

